   	<div class="row">
	   	<div class="col-md-4">
	   		<%= gravatar_tag current_user.email, size: 200 %>
	   	</div>

	   	<div class="col-md-4">
	   		<h3><%= current_user.username %></h3>
	   		<p>Age: <%= current_user.age %></p>
