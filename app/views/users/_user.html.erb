<div class="col-sm-6 col-md-4">
	<div class="thumbnail">
		<%= link_to user_path(user.username) do %>
			<%= gravatar_tag(user.email, size: 200) %>
		<% end %>
		<div class="caption text-center">
			<h3><%= link_to user.username, user_path(user.username) %></h3>
			<h5><%= user.bio %></h5>
		</div>
	</div>
</div>

